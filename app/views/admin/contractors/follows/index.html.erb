<%= form_with url: admin_contractor_follows_path, method: :get do |f| %>
    <div class = "search-field">
      <%=f.search_field :keyword, value: params[:keyword], class: "form-control border-radius w-50 mr-3 w-100 mt-5 my-2" %>
      <%= f.submit "検索", class: "btn btn-primary mb-5" %>
    </div>
  <% end %>
<h3>Follow一覧</h3>
<% @contractor.clients.each do |user| %>
  <table class="table table-striped-columns mt-3">
    <tr>
      <td>フォローしたユーザー名</td>
      <td><%= link_to user.name, client_path(user.id) %> <br/>
      <%= link_to "delete", admin_contractor_follow_path(id: user.id), method: :delete, data: { confirm: "本当に削除しますか？" } , class: "btn btn-danger" %>
      </td>
    </tr>
    <br />
  </table>
<% end %>
<%= link_to "ユーザページに戻る", admin_contractor_path(@contractor), class: "mb-5 d-block" %>