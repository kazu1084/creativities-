<h2 class = "mt-5">お問い合わせ一覧</h2>
<% @contacts.each do |contact| %>
<table class="table table-striped-columns mt-5">
    <tr>
      <td>名前</td>
      <td><%= contact.name %></td>
    </tr>
    <tr>
      <td>email</td>
      <td><%= contact.email %></td>
    </tr>
    <tr>
      <td>問い合わせ内容</td>
      <td><%= contact.body.truncate(20) %></td>
    </tr>
  </table>
<% end %>