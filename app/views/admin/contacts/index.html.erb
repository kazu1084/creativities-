<h2 class = "mt-5">お問い合わせ一覧</h2>
<% @contacts.each do |contact| %>
<table class="table table-striped-columns mt-5">
    <tr>
      <td>名前</td>
      <td><%= contact.name %></td>
    </tr>
    <tr>
      <td>email</td>
      <td><%= contact.email %></td>
    </tr>
    <tr>
      <td>問い合わせ内容</td>
      <td><%= link_to contact.body.truncate(20) , admin_contact_path(contact.id) %><%= link_to "delete", admin_contact_path(contact), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger ml-3" %></td>
    </tr>
  </table>
<% end %>