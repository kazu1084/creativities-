<div class = "post-search">
  <%= form_with url: admin_contacts_path, method: :get do |f| %>
    <div class = "search-field">
      <%=f.search_field :keyword, value: params[:keyword], class: "form-control border-radius w-50 mr-3 w-100 mt-5 my-2" %>
      <%= f.submit "検索", class: "btn btn-primary mb-5" %>
    </div>
  <% end %>
<h2 class = "mt-5">お問い合わせ一覧</h2>
<% @contacts.each do |contact| %>
<table class="table table-striped-columns mt-5">
    <tr>
      <td>名前</td>
      <td><%= contact.name %></td>
    </tr>
    <tr>
      <td>email</td>
      <td><%= contact.email %></td>
    </tr>
    <tr>
      <td>問い合わせ内容</td>
      <td><%= link_to contact.body.truncate(20) , admin_contact_path(contact.id) %><%= link_to "delete", admin_contact_path(contact), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger ml-3" %></td>
    </tr>
  </table>
<% end %>