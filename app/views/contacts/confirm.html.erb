<%= form_with model: @contact, url: contacts_path, method: :post do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :body %>
  <table class="table table-striped-columns">
    <tr>
      <td>名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td>email</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td>問い合わせ内容</td>
      <td><%= @contact.body %></td>
    </tr>
  </table>
  <%= f.submit "送信する", class: "btn btn-primary" %>
<% end %>
