<div class = "row justify-content-center">
  <div class = "cont-form mt-5">
    <%= form_with model:@contact do |f| %>
    <div class = "postform-title">
      <label for="名前" class="name-label">名前（<span class = "text-danger">*</span>必須）</label>
      <%= f.text_field :name, class: "form-control border-radius mb-3" %>
    </div>
    <div class = "postform-title">
      <label for="メールアドレス" class="email-label">email（<span class = "text-danger">*</span>必須）</label>
      <%= f.text_field :email , class: "form-control border-radius mb-3" %>
    </div>
    <div class = "postform-body">
      <label for="問い合わせ内容" class="contact-label">問い合わせ内容（<span class = "text-danger">*</span>必須）</label>
      <%= f.text_area :body, class: "form-control border-radius mb-3 form-control-lg",rows:6 %>
    </div>
    <div class = "postform-submit">
      <%= f.submit "確認画面へ", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>