<div class = "row">
  <div class = "col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <div class = "my-content mt-3">
      <%= image_tag @contractor.get_profile_image(300,300) %>
      <h3><%= @contractor.name %></h3>
      <%= link_to "レビュー一覧",contractor_contractor_reviews_path(@contractor) %>
    </div>
    <div class = "my-content mt-3">
      <div class = "card">
         <div class = "card-body">
            <div class ="card-title d-flex align-items-center">
              <i class="fa-regular fa-map mx-2"></i>
                <h1>area</h1>
            </div>
            <p class = "card-text mx-2">
              <%= @contractor.area %>
            </p>
          </div>
      </div>
    </div>

<h1>introduction</h1>
<%= @contractor.introduction %>
<h1>skill</h1>
<%= @contractor.skill %>
<h1>experience</h1>
<%= @contractor.experience %>

<%= link_to "投稿一覧へ戻る", posts_path %>

<% if current_client %>
  <% if current_client.following?(@contractor) %>
    <%= link_to "unfollow", client_contractor_follows_path(@contractor), method: :delete, class: "btn btn-danger"%>
  <% else %>
    <%= link_to "follow", contractor_client_follows_path(@contractor), method: :post, class: "btn btn-primary"%>
  <% end %>
<% end %>
<br />
<% if current_client %>
  <%= link_to "評価する", new_client_contractor_reviews_path(@contractor.id) %>
<% end %>