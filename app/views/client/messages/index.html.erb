<h1>メッセージ一覧</h1>
<ul>
  <% @latest_messages.each do |message| %>
    <li>
        <% if message.sender == current_client %>
          <%= link_to message.receiver.name, client_message_path(message.receiver)  %>
        <% else %>
          <%= link_to message.sender.name, client_message_path(message.sender)  %>
        <% end %>
        <%= message.created_at.strftime("%m-%d %H:%M") %><%= message.body %>
    </li>
  <% end %>
</ul>