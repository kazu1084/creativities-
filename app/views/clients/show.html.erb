<% if @client.profile_image.attached? %>
<%= image_tag @client.get_profile_image(100,100) %>
<% else %>
<%= image_tag @client.get_profile_image(100,100) %>
<%= image_tag 'app.assets/images/no_image', size: "200x200" %>
<% end %>
<%= @client.name %>
<h1>area</h1>
<%= @client.area %>
<h1>introduction</h1>
<%= @client.introduction %>
<h1>purpose</h1>
<%= @client.purpose %>
<h1>goal</h1>
<%= @client.goal %>

<h1>my post</h1>
<% @posts.each do |post| %>
<%= link_to post.title, post_path(post.id) %>
<%= post.body %>
<%= link_to post.embed_url, post.embed_url %>
<%= if post.image.attached? %>
<%= image_tag post.image.variant(resize_to_limit: [300,200]) %>
<% end %>
<%= if post.video.attached? %>
<%= video_tag polymorphic_path(post.video), controls: true, size: "300x300"  %>
<% end %>
<br />
<% end %>

<%= link_to "投稿一覧へ戻る", posts_path %>
