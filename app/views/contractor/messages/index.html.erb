<h1>メッセージ一覧</h1>
<ul>
  <% @messages.each do |message| %>
    <li>
        <% if message.sender == current_contractor %>
          <%= link_to message.receiver.name, client_path(message.receiver_id)  %>
        <% else %>
          <%= link_to message.sender.name, client_path(message.receiver_id)  %>
        <% end %>
        <%= message.body %>
    </li>
  <% end %>
</ul>